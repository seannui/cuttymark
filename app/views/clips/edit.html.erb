<div class="mb-6">
  <%= link_to "&larr; Back to Clip".html_safe, clip_path(@clip), class: "text-sm text-indigo-600 hover:text-indigo-900" %>
</div>

<div class="max-w-2xl">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Edit Clip</h1>
    <p class="mt-2 text-sm text-gray-600">Adjust the clip's time range or details.</p>
  </div>

  <div class="bg-white shadow-sm rounded-lg border border-gray-200 p-6">
    <%= render "form", clip: @clip %>
  </div>

  <div class="mt-6 pt-6 border-t border-gray-200">
    <h3 class="text-sm font-medium text-red-600">Danger Zone</h3>
    <p class="mt-1 text-sm text-gray-500">Deleting a clip will remove it permanently.</p>
    <div class="mt-4">
      <%= button_to "Delete Clip", clip_path(@clip), method: :delete, data: { confirm: "Are you sure? This will permanently delete this clip." }, class: "inline-flex items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50" %>
    </div>
  </div>
</div>
