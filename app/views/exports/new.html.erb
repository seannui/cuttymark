<div class="mb-6">
  <%= link_to "&larr; Back".html_safe, :back, class: "text-sm text-indigo-600 hover:text-indigo-900" %>
</div>

<div class="mb-8">
  <h1 class="text-3xl font-bold text-gray-900">Batch Export</h1>
  <p class="mt-2 text-sm text-gray-600">Export <%= @clips.size %> clips in multiple formats</p>
</div>

<% if @clips.any? %>
  <%= form_with url: batch_exports_path, method: :post, class: "space-y-8" do |f| %>
    <!-- Selected Clips -->
    <div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-lg font-medium text-gray-900">Selected Clips (<%= @clips.size %>)</h2>
      </div>
      <div class="divide-y divide-gray-200 max-h-64 overflow-y-auto">
        <% @clips.each do |clip| %>
          <div class="px-6 py-3 flex items-center justify-between">
            <div class="flex items-center">
              <input type="hidden" name="clip_ids[]" value="<%= clip.id %>">
              <div class="h-8 w-8 rounded bg-indigo-100 flex items-center justify-center mr-3">
                <svg class="h-4 w-4 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-900"><%= clip.display_title %></p>
                <p class="text-xs text-gray-500"><%= clip.video.filename %> - <%= clip.time_range_formatted %></p>
              </div>
            </div>
            <span class="text-sm text-gray-500"><%= clip.duration_formatted %></span>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Export Name -->
    <div class="bg-white shadow-sm rounded-lg border border-gray-200 p-6">
      <label for="export_name" class="block text-sm font-medium text-gray-700 mb-2">Export Name</label>
      <input type="text" name="export_name" id="export_name"
             class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm"
             placeholder="batch_export" value="batch_export">
      <p class="mt-1 text-xs text-gray-500">Used for naming edit list files (Premiere XML, FCPXML, EDL)</p>
    </div>

    <!-- Video Formats -->
    <div class="bg-white shadow-sm rounded-lg border border-gray-200 p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Video Export Formats</h3>
      <p class="text-sm text-gray-500 mb-4">Each clip will be rendered to the selected video formats.</p>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        <% @video_formats.each do |key, description| %>
          <label class="flex items-start space-x-3 p-3 border border-gray-200 rounded-lg hover:bg-gray-50 cursor-pointer">
            <input type="checkbox" name="formats[]" value="<%= key %>" class="mt-0.5 text-indigo-600 rounded">
            <div>
              <span class="text-sm font-medium text-gray-900"><%= description %></span>
            </div>
          </label>
        <% end %>
      </div>
    </div>

    <!-- Edit List Formats -->
    <div class="bg-white shadow-sm rounded-lg border border-gray-200 p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Edit List Formats</h3>
      <p class="text-sm text-gray-500 mb-4">Creates a single edit list containing all clips in sequence.</p>
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        <% @edit_list_formats.each do |key, description| %>
          <label class="flex items-start space-x-3 p-3 border border-gray-200 rounded-lg hover:bg-gray-50 cursor-pointer">
            <input type="checkbox" name="formats[]" value="<%= key %>" class="mt-0.5 text-indigo-600 rounded">
            <div>
              <span class="text-sm font-medium text-gray-900"><%= description %></span>
            </div>
          </label>
        <% end %>
      </div>
    </div>

    <!-- Submit -->
    <div class="flex justify-end space-x-4">
      <%= link_to "Cancel", :back, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      <%= f.submit "Start Batch Export", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 cursor-pointer" %>
    </div>
  <% end %>
<% else %>
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
    <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
    </svg>
    <h3 class="mt-4 text-lg font-medium text-gray-900">No clips selected</h3>
    <p class="mt-2 text-sm text-gray-500">Select clips to export from the clips list or a search results page.</p>
    <div class="mt-6">
      <%= link_to "Go to Clips", clips_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" %>
    </div>
  </div>
<% end %>
