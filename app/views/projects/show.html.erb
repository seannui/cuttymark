<div class="mb-6">
  <%= link_to "&larr; Back to Projects".html_safe, projects_path, class: "text-sm text-indigo-600 hover:text-indigo-900" %>
</div>

<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @project.name %></h1>
      <% if @project.description.present? %>
        <p class="mt-2 text-sm text-gray-600"><%= @project.description %></p>
      <% end %>
    </div>
    <div class="flex space-x-3">
      <%= link_to "Edit", edit_project_path(@project), class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      <%= link_to "Add Video", new_video_path(project_id: @project.id), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700" %>
    </div>
  </div>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-blue-100 text-blue-600">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Videos</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @videos.count %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-green-100 text-green-600">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Transcribed</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @project.transcribed_videos_count %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-purple-100 text-purple-600">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Searches</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @search_queries.count %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-orange-100 text-orange-600">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Clips</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @project.clips.count %></p>
      </div>
    </div>
  </div>
</div>

<!-- Videos Section -->
<div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden mb-8">
  <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
    <h2 class="text-lg font-medium text-gray-900">Videos</h2>
    <%= link_to "Add Video", new_video_path(project_id: @project.id), class: "text-sm text-indigo-600 hover:text-indigo-900" %>
  </div>

  <% if @videos.any? %>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Video</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Duration</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Transcript</th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @videos.each do |video| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center">
                  <div class="h-10 w-10 rounded bg-gray-100 flex items-center justify-center">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <%= link_to video.filename, video_path(video), class: "text-sm font-medium text-gray-900 hover:text-indigo-600" %>
                    <div class="text-xs text-gray-500"><%= video.file_size_formatted %></div>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= video.duration_formatted || "-" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= video.status == 'ready' ? 'bg-green-100 text-green-800' : video.status == 'error' ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
                  <%= video.status.titleize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if video.transcript %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= video.transcript.status == 'completed' ? 'bg-green-100 text-green-800' : video.transcript.status == 'failed' ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
                    <%= video.transcript.status.titleize %>
                  </span>
                <% else %>
                  <span class="text-sm text-gray-400">Not started</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to "View", video_path(video), class: "text-indigo-600 hover:text-indigo-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="px-6 py-8 text-center text-gray-500">
      No videos in this project yet.
      <%= link_to "Add one now", new_video_path(project_id: @project.id), class: "text-indigo-600 hover:text-indigo-900" %>.
    </div>
  <% end %>
</div>

<!-- Search Queries Section -->
<div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
    <h2 class="text-lg font-medium text-gray-900">Recent Searches</h2>
    <%= link_to "New Search", new_search_query_path(project_id: @project.id), class: "text-sm text-indigo-600 hover:text-indigo-900" %>
  </div>

  <% if @search_queries.any? %>
    <ul class="divide-y divide-gray-200">
      <% @search_queries.each do |query| %>
        <li class="px-6 py-4 hover:bg-gray-50">
          <%= link_to search_query_path(query), class: "flex items-center justify-between" do %>
            <div>
              <p class="text-sm font-medium text-gray-900"><%= query.query_text %></p>
              <p class="text-xs text-gray-500">
                <%= query.match_type.titleize %> search &middot;
                <%= query.matches_count %> matches
              </p>
            </div>
            <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="px-6 py-8 text-center text-gray-500">
      No searches yet.
      <%= link_to "Create one", new_search_query_path(project_id: @project.id), class: "text-indigo-600 hover:text-indigo-900" %>.
    </div>
  <% end %>
</div>
