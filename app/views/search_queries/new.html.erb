<div class="mb-6">
  <%= link_to "&larr; Back".html_safe, search_queries_path, class: "text-sm text-indigo-600 hover:text-indigo-900" %>
</div>

<div class="max-w-2xl">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">New Search</h1>
    <p class="mt-2 text-sm text-gray-600">Search through transcribed videos to find relevant clips.</p>
  </div>

  <div class="bg-white shadow-sm rounded-lg border border-gray-200 p-6">
    <%= form_with model: @search_query, class: "space-y-6" do |form| %>
      <% if @search_query.errors.any? %>
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @search_query.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div>
        <%= form.label :project_id, class: "block text-sm font-medium text-gray-700" %>
        <%= form.collection_select :project_id, @projects, :id, :name, { prompt: "Select a project" }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>

      <div>
        <%= form.label :query_text, "Search Query", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :query_text, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "e.g., discussions about Rob Reiner, directing decisions, behind the scenes stories..." %>
        <p class="mt-1 text-xs text-gray-500">Describe what you're looking for. For semantic search, use natural language.</p>
      </div>

      <div>
        <%= form.label :match_type, "Search Type", class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-2 space-y-2">
          <div class="flex items-start">
            <%= form.radio_button :match_type, "semantic", class: "h-4 w-4 text-indigo-600 border-gray-300 focus:ring-indigo-500", checked: true %>
            <%= form.label :match_type_semantic, class: "ml-3" do %>
              <span class="block text-sm font-medium text-gray-700">Semantic Search</span>
              <span class="block text-xs text-gray-500">Find content by meaning, not just keywords. Best for finding discussions about topics.</span>
            <% end %>
          </div>
          <div class="flex items-start">
            <%= form.radio_button :match_type, "fuzzy", class: "h-4 w-4 text-indigo-600 border-gray-300 focus:ring-indigo-500" %>
            <%= form.label :match_type_fuzzy, class: "ml-3" do %>
              <span class="block text-sm font-medium text-gray-700">Fuzzy Match</span>
              <span class="block text-xs text-gray-500">Find similar text with tolerance for transcription errors.</span>
            <% end %>
          </div>
          <div class="flex items-start">
            <%= form.radio_button :match_type, "exact", class: "h-4 w-4 text-indigo-600 border-gray-300 focus:ring-indigo-500" %>
            <%= form.label :match_type_exact, class: "ml-3" do %>
              <span class="block text-sm font-medium text-gray-700">Exact Match</span>
              <span class="block text-xs text-gray-500">Find exact text matches only.</span>
            <% end %>
          </div>
        </div>
      </div>

      <div class="flex justify-end space-x-3">
        <%= link_to "Cancel", search_queries_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <%= form.submit "Search", class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
