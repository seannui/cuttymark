<div class="mb-6">
  <%= link_to "&larr; Back to Searches".html_safe, search_queries_path, class: "text-sm text-indigo-600 hover:text-indigo-900" %>
</div>

<div class="mb-8">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Search Results</h1>
      <p class="mt-2 text-sm text-gray-600">
        "<%= @search_query.query_text %>" in
        <%= link_to @search_query.project.name, project_path(@search_query.project), class: "text-indigo-600 hover:text-indigo-900" %>
      </p>
    </div>
    <div class="flex items-center space-x-4">
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-indigo-100 text-indigo-800">
        <%= @search_query.match_type.titleize %> Search
      </span>
    </div>
  </div>
</div>

<!-- Results Summary -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-indigo-100 text-indigo-600">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Total Matches</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @matches.count %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-blue-100 text-blue-600">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Videos with Matches</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @search_query.videos_with_matches.count %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center">
      <div class="p-3 rounded-full bg-green-100 text-green-600">
        <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm font-medium text-gray-500">Clips Created</p>
        <p class="text-2xl font-semibold text-gray-900"><%= @search_query.clips.count %></p>
      </div>
    </div>
  </div>
</div>

<!-- Matches List -->
<div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
  <div class="px-6 py-4 border-b border-gray-200">
    <h2 class="text-lg font-medium text-gray-900">Matches</h2>
  </div>

  <% if @matches.any? %>
    <ul class="divide-y divide-gray-200">
      <% @matches.each do |match| %>
        <li class="p-6 hover:bg-gray-50">
          <div class="flex items-start justify-between">
            <div class="flex-1">
              <div class="flex items-center space-x-3 mb-2">
                <%= link_to match.video.filename, video_path(match.video), class: "text-sm font-medium text-indigo-600 hover:text-indigo-900" %>
                <span class="text-sm text-gray-500 font-mono"><%= match.segment.time_range_formatted %></span>
                <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                  <%= number_to_percentage(match.relevance_score * 100, precision: 0) %> match
                </span>
              </div>
              <p class="text-sm text-gray-900 bg-gray-50 rounded p-3">
                <%= match.context_text.presence || match.segment.text %>
              </p>
            </div>
            <div class="ml-4 flex-shrink-0">
              <% if match.has_clip? %>
                <%= link_to "View Clip", clip_path(match.clip), class: "inline-flex items-center px-3 py-1.5 border border-gray-300 text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50" %>
              <% else %>
                <%= link_to "Create Clip", new_clip_path(video_id: match.video.id, match_id: match.id), class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded text-white bg-indigo-600 hover:bg-indigo-700" %>
              <% end %>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <div class="px-6 py-8 text-center text-gray-500">
      No matches found for this search query.
    </div>
  <% end %>
</div>
