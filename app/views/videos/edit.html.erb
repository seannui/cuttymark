<div class="mb-6">
  <%= link_to "&larr; Back to Video".html_safe, video_path(@video), class: "text-sm text-indigo-600 hover:text-indigo-900" %>
</div>

<div class="max-w-2xl">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Edit Video</h1>
    <p class="mt-2 text-sm text-gray-600">Update video details.</p>
  </div>

  <div class="bg-white shadow-sm rounded-lg border border-gray-200 p-6">
    <%= render "form", video: @video %>
  </div>

  <div class="mt-6 pt-6 border-t border-gray-200">
    <h3 class="text-sm font-medium text-red-600">Danger Zone</h3>
    <p class="mt-1 text-sm text-gray-500">Deleting a video will remove its transcript and all associated clips.</p>
    <div class="mt-4">
      <%= button_to "Delete Video", video_path(@video), method: :delete, data: { confirm: "Are you sure? This will permanently delete this video and all its clips." }, class: "inline-flex items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50" %>
    </div>
  </div>
</div>
